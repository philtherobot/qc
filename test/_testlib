
test() {

    if [[ -d $1 ]]
    then
        if [[ $verbose == 1 ]]; then echo directory "$1" ; fi
        ./$1/_tests
    else
        if [[ $verbose == 1 ]]; then echo test "$1" ; fi
        ./$1
    fi
    
    if [[ $? != 0 ]]
    then 
        echo "****" Failure: $1
        exit 1
    fi
}

