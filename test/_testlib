
run() {

    if [[ -d $1 ]]
    then
        if [[ $verbose == 1 ]]; then echo directory "$1" ; fi
        ./$1/_tests
    else
        if [[ $verbose == 1 ]]; then echo test "$*" ; fi
        if [[ $1 = /* ]]
        then
            $*
        else
            ./$*
        fi
    fi
    
    if [[ $? != 0 ]]
    then 
        echo "****" Failure: $*
        exit 1
    fi
}

